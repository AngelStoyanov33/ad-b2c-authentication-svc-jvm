FROM adoptopenjdk/openjdk11:jdk-11.0.2.9-slim
WORKDIR /opt
ENV PORT 8080

ENV CLIENT_ID=ENTER_ID_HERE
ENV CLIENT_SECRET=ENTER_SECRET_HERE
ENV ACCEPTED_TENANTS=LIST_ACCEPTED_TENANTS_HERE
ENV KEY_SET_URI=ENTER_KEY_SET_URI_HERE
ENV AAD_MAIN_ALIAS=ENTER_AAD_MAIN_ALIAS_HERE
	
EXPOSE 8080
COPY target/*.jar /opt/app.jar
ENTRYPOINT exec java $JAVA_OPTS -jar -Dspring.profiles.active=prod app.jar